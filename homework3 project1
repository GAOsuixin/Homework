using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace homework3project1
{
    
    class Rectangle
    {
        private double height;
        private double width;
        public double Area()
        {
            return width * height;
        }
        public Boolean Legal()
        {
            if (height > 0 && width > 0)
            {
                return true;
            }
            else
                return false;
        }
        public void Display()
        {
            Console.WriteLine("长方形");
            if(Legal())
            {
                Console.WriteLine("长度：{0}",width);
                Console.WriteLine("宽度：{0}",height);
                Console.WriteLine("面积：{0}",Area());
            }
        }
    }
    class Square
    {
        private double length;
        public double Area()
        {
            return length * length;
        }
        public Boolean Legal()
        {
            if (length > 0)
                return true;
            else
                return false;
        }
        public void Display()
        {
            Console.WriteLine("正方形");
            if (Legal())
            {
                Console.WriteLine("边长：{0}", length);
                Console.WriteLine("面积：{0}", Area());
            }
        }
    }
   
    class Triangle
    {
        private double length1;
        private double length2;
        private double length3;
        public double Area()
        {
            double s = (length1 + length2 + length3) / 2;
            Double S = s * (s - length1) * (s - length2) * (s - length3);
            return Math.Sqrt(S);
        }
        public Boolean Legal()
        {

            if (length1 > 0 && length2 > 0 && length3 > 0 &&
                length1 + length2 > length3 && length1 + length3 > length2 && length2 + length3 > length1)
            {
                return true;
            }
            else
                return false;
            
        }
        public void Display()
        {
            Console.WriteLine("三角形");
            if (Legal())
            {
                Console.WriteLine("第一条边：{0}", length1);
                Console.WriteLine("第二条边：{0}", length2);
                Console.WriteLine("第三条边：{0}", length3);
                Console.WriteLine("面积：{0}", Area());
            }
        }
    }
}
